{
    "name": "heyday/beam",
    "description": "A utility for deploying files to servers",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Shane Garelja",
            "email": "shane@heyday.co.nz"
        },
        {
            "name": "Cam Spiers",
            "email": "cameron@heyday.co.nz"
        },
        {
            "name": "Stephen Holdaway",
            "email": "stephen.holdaway@heyday.co.nz"
        }
    ],
    "config": {
        "platform": {
            "php": "5.6"
        }
    },
    "provide": {
        "ext-ssh2": "*"
    },
    "require": {
        "php": ">=5.6",
        "symfony/console": "^2.8.3",
        "symfony/process": "~2.3",
        "symfony/options-resolver": "~2.2",
        "symfony/config": "~2.2",
        "herzult/php-ssh": "~1.0",
        "stecman/symfony-console-completion": "~0.6.0",
        "seld/jsonlint": "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "mikey179/vfsStream": "~1.2",
        "symfony/finder": "~2.2"
    },
    "autoload": {
        "psr-4": {
            "Heyday\\Beam\\": "src/"
        }
    },
    "bin": [
        "bin/beam"
    ]
}
