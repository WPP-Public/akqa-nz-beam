#!/usr/local/bin/php -q

<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Heyday\Deployment\Command\Deployment;

/**
 * deploy:
 * A tool that utilises rsync for deploying sites
 */

date_default_timezone_set('Pacific/Auckland');

$deployment = new Deployment( $argv, $_SERVER['HOME']."/Sites" );
$deployment->deploy();




